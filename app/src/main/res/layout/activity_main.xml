<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/warning_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="18dp"
        android:background="@color/green"
        android:text="Show Warning Alert Dialog"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/error_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/red"
        android:text="Show Error Alert Dialog"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/warning_button"
        app:layout_constraintStart_toStartOf="@+id/warning_button"
        app:layout_constraintTop_toBottomOf="@+id/warning_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/text_input_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/yellow"
        android:text="Show Text Input Alert Dialog"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/error_button"
        app:layout_constraintStart_toStartOf="@+id/error_button"
        app:layout_constraintTop_toBottomOf="@+id/error_button" />
</androidx.constraintlayout.widget.ConstraintLayout>